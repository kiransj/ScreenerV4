{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/vue.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }
            },
            "args": [
                "watch",
                "run"
            ],
            "problemMatcher": "$tsc-watch"
        }
    ]
}